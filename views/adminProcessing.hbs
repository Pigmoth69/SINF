{{> adminheader}}
<div id="page-wrapper">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">Orders That Need Processing</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {{#each orders}}
        {{#if display}}
        <div class="row">
            <div class="col-xs-12">
                <form>
                    <div class="row">
                        <div class="col-xs-6">
                            <h5 style="overflow:hidden;">Number of Document: {{NumDoc}}, Client Code: {{NameClient}}, Serie: {{Serie}}</h5>
                        </div>
                        <div class="col-xs-1">
                            <button class="btn btn-warning" value="Approve Payment">This Order Needs Processing</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        {{/if}}
    {{/each}}
</div>

{{> adminfooter}}