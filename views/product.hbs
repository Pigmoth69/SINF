{{> topbar}}

<head>
	<link rel="stylesheet" type="text/css" href="/css/product.css">
</head>

<div class="container">
	<div class="row">
		<img src="/images/{{product.Imagem}}" alt="product image" class="col-xs-3">
		<div id="productDetails" class="col-xs-5 col-xs-offset-1">
			<div id="nameQuantity" class="row">

				<h1 class="col-xs-9">{{product.Description}}</h1>
				{{#if_less 0 product.stk}}
				<span class="col-xs-3">Quantity: {{product.stk}}</span>
				{{/if_less}}
				{{#if_less product.stk 0}}
				<span class="col-xs-3">No stock</span>
				{{/if_less}}

			</div>
			<div id="categoryRating" class="row">
				{{#if typeOne}}
				<span class="col-xs-6">Preco: {{price}}€</span>
				{{/if}}
				{{#if typeTwo}}
				<span class="col-xs-6">Preco: {{price}}€</span>
				{{/if}}
				{{#if typeThree}}
				<span class="col-xs-6">Preco: {{price}}€</span>
				{{/if}}
				{{#if typeFour}}
				<span class="col-xs-6">Preco: {{price}}€</span>
				{{/if}}
				{{#if typeFive}}
				<span class="col-xs-6">Preco: {{price}}€</span>
				{{/if}}
				{{#if typeSix}}
				<span class="col-xs-6">Preco: {{price}}€</span>
				{{/if}}
				<span class="col-xs-6">IVA: {{iva}}€</span>
			</div>
			<br>
			<div id="categoryRating" class="row">
				<span class="col-xs-6">Categoria: {{product.Family}}</span>
				<span class="col-xs-6">Sub-Categoria: {{product.SubFamily}}</span>
			</div>
			<br>
			<div id="categoryRating" class="row">
				<span class="col-xs-6">Garantia: {{product.Warranty}}</span>
				<span class="col-xs-6">Tempo de Entrega: {{product.DeliveryTime}}</span>
			</div>
		</div>
		{{#if_less 0 product.stk}}
		<button class="col-xs-2 col-xs-offset-1" onclick="callProduct('{{product.Code}}'); return false;">Add to Cart</button>		{{/if_less}}
	</div>
	{{#each comments}}
	<div class="row comment">
		<div class="col-xs-2 commentInfo">
			<div class="row commentName">{{username}}</div>
		</div>
		<div class="col-xs-8">{{comentario}}</div>
	</div>
	{{/each}}
	<br>
	<br>
	{{#if id}}
	<div class="row">
		<div class="col-sm-1">
			<div class="thumbnail">
				<img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
			</div>
			<!-- /thumbnail -->
		</div>
		<!-- /col-sm-1 -->
		<div class="col-sm-5">
			<div class="panel panel-default">
				<div class="panel-body">
					<form action="/product/{{product.Code}}/newComment" method="POST">
						<textarea rows="5" cols="55" id "commentBox" name="comentario"></textarea>
						<br>
						<br>
						<input type="submit">
					</form>
				</div>
				<!-- /panel-body -->
			</div>
			<!-- /panel panel-default -->
		</div>
		<!-- /col-sm-5 -->
	</div>
	{{/if}}
	<!-- /row -->
</div>
{{> footer}}