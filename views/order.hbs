<link rel="stylesheet" type="text/css" href="/css/order.css">

<ul class="nav nav-pills nav-justified nav-stacked" width="70%">
  <li class="active"><a href="#">All Orders</a></li>
  <li><a href="#">Orders to pay</a></li>
  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">per page
    <span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li><a href="/order/1/5">5</a></li>
      <li><a href="/order/1/10">10</a></li>
