{{> header}}

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shopping Cart</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page title area -->


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">

            <div class="col-md-12">
                <div class="product-content-right">
                    <div class="woocommerce">
                        <form method="post" action="#">
                            <table cellspacing="0" class="shop_table cart">
                                <thead>
                                    <tr>
                                        <th class="product-remove">&nbsp;</th>
                                        <th class="product-thumbnail">&nbsp;</th>
                                        <th class="product-name">Product</th>
                                        <th class="product-price">Price</th>
                                        <th class="product-quantity">Quantity</th>
                                        <th class="product-subtotal">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each cart}}
                                    <tr class="cart_item">
                                        <td class="product-remove">
                                            <a title="Remove this item" class="remove" href="/cart/removeProduct/{{idProdutoPrimavera}}">×</a>
                                        </td>

                                        <td class="product-thumbnail">
                                            <a href="/product/{{idProdutoPrimavera}}"><img width="145" height="145" alt="poster_1_up" class="shop_thumbnail" src="/images/{{Imagem}}"></a>
                                        </td>

                                        <td class="product-name">
                                            <a href="/product/{{idProdutoPrimavera}}">{{Description}}</a>
                                        </td>

                                        <td class="product-price">
                                            <span class="amount">{{UnitPrice}}€</span>
                                        </td>

                                        <td class="product-quantity">
                                            <div class="quantity buttons_added">
                                                <input type="button" class="minus" value="-">
                                                <input type="number" size="4" class="input-text qty text" title="Qty" value="{{quantidade}}" min="0" step="1">
                                                <input type="button" class="plus" value="+">
                                            </div>
                                        </td>

                                        <td class="product-subtotal">
                                            <span class="amount">{{Price}}€</span>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </form>

                        <div class="cart-collaterals">

                            <div class="row">
                                <div class="col-md-6 cross-sells">

                                    <div class="related-products-wrapper">
                                        <h2 class="related-products-title">You may be interested in</h2>
                                        <div class="related-products-carousel">
                                            {{#each relatedProducts}}
                                            <div class="single-product">
                                                <div class="product-f-image">
                                                    <img src="/images/{{Imagem}}" alt="">
                                                    <div class="product-hover">
                                                        <a href="" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                                        <a href="/product/{{Code}}" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                                    </div>
                                                </div>
                                                <h2><a href="/product/{{Code}}">{{Description}}</a></h2>
                                            </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 cart_totals ">
                                    <h2>Cart Totals</h2>
                                    <table>
                                        <tbody>
                                            <tr class="order-total">
                                                <th>Order Total</th>
                                                <td><strong><span class="amount">{{total}}€</span></strong> </td>
                                            </tr>
                                            <tr>
                                                <td align="center" class="actions" colspan="2">
                                                    <input type="submit" onclick="payment();" value="Checkout" name="proceed" class="checkout-button button alt wc-forward">
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{> footer1}}