{{> topbar}}
	<link rel="stylesheet" type="text/css" href="/css/cart.css">
	<div class="container">
		<div class="row">
			<h1>Shopping Cart</h1>
		</div>
		<div class="row">
			<div class="col-xs-8">
				{{#if empty}}
				<h3>No products in cart</h3>
				{{else}}
					{{#each cart}}
						<div class="row cartRow">
							<div class="col-xs-3">
								<img class="productLogo" src="/images/{{Imagem}}" alt="product image">
							</div>
							<div class="col-xs-4 col-xs-offset-1">
								<a href="/product/{{idProdutoPrimavera}}"><h3 class="productName">{{Description}}</h3></a>
							</div>
							<div class="col-xs-2">
								<h3 class="productPrice">Price: {{Price}}€</h3>
							</div>
							<div class="col-xs-2">
								<button class="removeFromCart" onclick="removeProduct('{{idProdutoPrimavera}}')">Remove</button> <!-- TODO -->
								<select id="{{idProdutoPrimavera}}" class="quant">
									{{#repeat quantidade}}
										<option value="{{@index}}">{{@index}}</option>
									{{/repeat}}
								</select>
							</div>
						</div>
					{{/each}}
				{{/if}}
			</div>
			<div class="col-xs-3 col-xs-offset-1 cartSummaryBox">
				<p id="cartSummaryTitle">Cart Summary</p>
				<p id="totalSummary">Total: <span id="cartValue">{{total}}€</span></p>
				<button onclick="window.location = /payment/" id="checkoutButton">Proceed to checkout</button> <!-- VER CHECKOUT -->
			</div>
		</div>
	</div>
{{> footer}}
