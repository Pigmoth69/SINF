	<link rel="stylesheet" href="/css/inventory.css">

	<div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>Shop</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page title area -->

<div id="content" class="container" style="margin: 0;">
