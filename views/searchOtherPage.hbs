	<!-- ver quais estão ativos, e redirecionar nesse sentido -->
	<div class="row" id="mainPage">
		<div id="category" class="col-xs-2">
			<ul class="nav nav-pills nav-stacked">
				{{#each families}}
				<li class="familia" id="Family{{Code}}"><button style="width:100%" class="btn btn-info" class="familia_bt" onclick="changeToActiveFam('{{Code}}');return false;">{{Code}}</button></li>
				{{/each}}
			</ul>
		</div>
		<div id="home">
            <div id="products" class="col-xs-10">
                <div class="single-product-area">
                    <div class="zigzag-bottom">
                    </div>
                    <div class="container">
                        
                        <div class="row">
                        {{#each items}}
                            <div class="col-md-3 col-sm-6">
                                <div class="single-shop-product" style="width:265px;height:285px;">
                                    <div class="product-upper">
                                        <a href="/product/{{Code}}">
                                            <img src="/images/{{Imagem}}" alt="product image">
                                        </a>
                                    </div>
                                    <h2>
                                        <a href="/product/{{Code}}">{{Description}}
                                        </a>
                                    </h2>
                                    <div class="product-carousel-price">
                                        {{#if_eq Price PriceNo}}
                                        <ins>{{Price}}€</ins>
                                        {{/if_eq}}
                                        {{#if_diff Price PriceNo}}
                                        <ins>{{Price}}€</ins>
                                        <del>{{PriceNo}}€</del>
                                        {{/if_diff}}
                                    </div>
                                </div>
                            <div class="product-option-shop">
                                {{#if_less StkActual 0}}
                                    <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" onclick="callProduct('{{Code}}');">Add To Cart
                                    </a>
                                {{/if_less}}
                                {{#if_less 0 StkActual}}
                                    <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow">NO STOCK
                                    </a>
                                {{/if_less}}
                            </div>
                        </div>
                        {{/each}}
                        </div>
                    </div>
                </div>
            </div>
		</div>
	</div>
</div>
{{> footer1}}